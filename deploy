#!/usr/bin/python

import os.path
import shutil


def copy_dir(src, dst):
    if not os.path.exists(dst_dir):
        os.makedirs(dst_dir)

    for filename in os.listdir(src_dir):
        shutil.copy(os.path.join(src_dir, filename), dst_dir)


if __name__ == '__main__':
    project_root_path = os.path.dirname(__file__)
    home_dir = os.path.expanduser('~')

    for filename in ['bashrc', 'vimrc', 'tmux.conf']:
        shutil.copy(os.path.join(project_root_path, filename),
                    os.path.join(home_dir, '.' + filename))

    src_dir = os.path.join(project_root_path, 'bash')
    dst_dir = os.path.join(home_dir, '.', '.' + 'bash')
    copy_dir(src_dir, dst_dir)

